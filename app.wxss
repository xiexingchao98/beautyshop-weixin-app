/**app.wxss**/
@import "resources/wxss/weui.wxss";
@import "resources/wxss/material.wxss";

.page {
  color: rgba(0,0,0,.54);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.page__hd, .page__bd {
  margin: 30rpx 0 30rpx 0;
}

.sold,
.price {
  font-family: 'Arial';
}

.price {
  font-size: 9pt;
  color: orange;
}

.price::before {
  content: '￥'
}

.price .number {
  font-size: 14pt;
}

.sold::before {
  content: '已售'
}

.stock::before {
  content: '库存'
}

.thumbnail {
  display: block;
  width: 320rpx;
  height: 360rpx;  
  background: gray;
}


.item-present {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 25rpx 0 25rpx;
}

.item {
  width: 320rpx;
  height: 600rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 0 6px -3px #b1b1b1;
  border-radius: 4px;
}

.info {
  display: flex;
  flex-direction: column;
  padding: 12rpx;
  font-size: 9pt;
  height: 240rpx;
  word-break: break-all;
  box-sizing: border-box;
}

.name {
  flex: 1 1;
  height: calc(100% / 3 * 2);
}

.disabled {
  display: none;
}