.topbar {
  display: flex;
}

.topbar__center {
  flex: 1 1;
}

.topbar__left, .topbar__center, .topbar__right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.scan, .search, .camera {
  display: flex;
  padding: 20rpx;
}

.search {
  flex: 1 1;
}

input {
  font-size: 11pt;
  text-align: center;
}

swiper {
  height: 390rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.classify-menu {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx;
  margin-bottom: 80rpx;
}

.classify-menu__item {
  display: flex;
  align-items: center;
  word-break: keep-all;
  margin: 12rpx;
  padding: 12rpx 18rpx;
  box-shadow: 0 0 1px #ccc;
}

.bottom-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-cart {
  display: flex;
  padding: 18rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.search input {
  flex: 1 1;
  padding: 6rpx;
  /* border-bottom: 1px solid #1a73e8; */
  border: 1px solid #eee;
}